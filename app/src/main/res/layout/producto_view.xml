<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/producto_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/caramel_frap"
        android:layout_marginLeft="55dp"
        android:layout_marginBottom="25dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/producto_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caramel Frap"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/nombre"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/producto_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n del producto"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/desc"
            android:textSize="8sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/producto_precio"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="$5.0"
        android:textStyle="bold"
        android:textColor="@color/precio"
        android:textSize="19sp"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="55dp"/>
</LinearLayout>